<?xml version="1.0"?>
<project name="HelloWorld" default="run">
    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac destdir="build/classes" includeantruntime="false">
            <src path="."/>
        </javac>
    </target>
    <target name="run" depends="compile">
        <java classname="Hello" classpath=""/>
    </target>
    <target name="clean">
        <delete dir="build"/>
    </target>
</project>